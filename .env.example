# Environment Variables Configuration

# Server
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/voxelpromo

# Security
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-this
ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com

# AI Services (at least one required for content generation)
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key

# Telegram (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# WhatsApp (optional)
WHATSAPP_ENABLED=false
WHATSAPP_TARGET_NUMBER=5511999999999
WHATSAPP_LIBRARY=baileys

# AliExpress Affiliate API (optional)
ALIEXPRESS_APP_KEY=your-aliexpress-app-key
ALIEXPRESS_APP_SECRET=your-aliexpress-app-secret
ALIEXPRESS_TRACKING_ID=your-tracking-id
ALIEXPRESS_EXCHANGE_RATE=5.0

# Amazon Product API (optional)
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_ASSOCIATE_TAG=your-associate-tag
AMAZON_REGION=us-east-1

# Mercado Livre API (optional)
MERCADOLIVRE_CLIENT_ID=your-mercadolivre-client-id
MERCADOLIVRE_CLIENT_SECRET=your-mercadolivre-client-secret
MERCADOLIVRE_REDIRECT_URI=http://localhost:3000/api/mercadolivre/callback
MERCADOLIVRE_AFFILIATE_CODE=your-affiliate-code-or-url
MERCADOLIVRE_AFFILIATE_COOKIES=[] # JSON string of cookies or path to cookies.json
MERCADOLIVRE_LINK_GENERATOR_ENDPOINT=https://www.mercadolivre.com.br/afiliados/linkbuilder/generate
PROXY_URL=http://user:pass@host:port # Optional: For running on non-BR servers

# X/Twitter API (optional)
X_API_KEY=your-x-api-key
X_API_SECRET=your-x-api-secret
X_ACCESS_TOKEN=your-x-access-token
X_ACCESS_SECRET=your-x-access-secret

# Mercado Pago (for subscription billing)
MP_ACCESS_TOKEN=APP_USR-your-access-token-here
MP_PUBLIC_KEY=APP_USR-your-public-key-here
MP_WEBHOOK_SECRET=your-webhook-secret-optional

# Frontend (optional, for CORS)
FRONTEND_URL=http://localhost:3001
